generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

enum Role  {
    USER
    ADMIN
}

model User {
    id String @id
    name String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    role Role @default(USER)
    ratings Rating[] @relation("Ratings")
    ratingCount Int @default(0)
    ratingTotal Int @default(0)
    authoredRatings Rating[] @relation("AuthoredRatings")

    @@map("users")
}

model Rating {
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    authorId String
    author User @relation("AuthoredRatings", fields: [authorId], references: [id])
    ratedUserId String
    ratedUser User @relation("Ratings", fields: [ratedUserId], references: [id])
    stars Int
    comment String? @db.Text

    @@id([authorId, ratedUserId])
    @@map("ratings")
}
