generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

enum Role  {
    USER
    ADMIN
}

model User {
    id String @id
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    role Role @default(USER)
    ratings Rating[] @relation("Ratings")
    authoredRatings Rating[] @relation("AuthoredRatings")

    @@map("users")
}

model Rating {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    authorId String
    author User @relation("AuthoredRatings", fields: [authorId], references: [id])
    ratedUserId String
    ratedUser User @relation("Ratings", fields: [ratedUserId], references: [id])
    stars Int
    comment String @db.Text

    @@map("ratings")
}
